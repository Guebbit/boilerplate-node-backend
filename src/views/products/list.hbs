<main>
    <h2 class="centered">All Products</h2>
    <div class="grid">
        {{#each productList}}
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title">
                        {{ dataValues.title }}
                    </h1>
                </header>
                <div class="card__image">
                    <img src="{{ dataValues.imageUrl }}" alt="{{ dataValues.title }}">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$
                        {{ dataValues.price }}
                    </h2>
                    <p class="product__description">
                        {{ dataValues.description }}
                    </p>
                </div>
                <div class="card__actions">
                    <a href="/products/details/{{ dataValues.id }}" class="btn">Details</a>
                    {{#if ../isAdmin}}
                        <a href="/products/edit/{{ dataValues.id }}" class="btn">Edit</a>
                        <form action="/products/delete" method="post">
                            <button class="btn" type="submit">Delete</button>
                            <input type="hidden" name="id" value="{{ dataValues.id }}">
                        </form>
                    {{/if}}
                    <form action="/cart" method="post">
                        <button class="btn" type="submit">Add to Cart</button>
                        <input type="hidden" value="1" name="quantity">
                        <input type="hidden" name="id" value="{{ dataValues.id }}">
                    </form>
                </div>
            </article>
        {{/each}}
    </div>
    <h2 class="centered">LOW PRICE Products</h2>
    <div class="grid">
        {{#each productListLC}}
            <article class="card product-item small-item">
                <header class="card__header">
                    <h1 class="product__title">
                        {{ dataValues.title }}
                    </h1>
                </header>
                <div class="card__image">
                    <img src="{{ dataValues.imageUrl }}" alt="{{ dataValues.title }}">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$
                        {{ dataValues.price }}
                    </h2>
                </div>
                <div class="card__actions">
                    <form action="/cart" method="post">
                        <button class="btn" type="submit">Add to Cart</button>
                        <input type="hidden" name="id" value="{{ dataValues.id }}">
                    </form>
                </div>
            </article>
        {{/each}}
    </div>
    <hr />
    <div class="centered">
        {{#if isAdmin}}
            <a href="/products/add" class="btn" style="width: 200px">Add new</a>
        {{/if}}
    </div>
</main>